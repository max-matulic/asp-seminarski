@model Order
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Order @Model.Id</h1>
<hr />

<form asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" name=id />
    <div class="form-group row">
        <label asp-for="DateCreated" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DateCreated" class="form-control" placeholder="Date created">
            <span asp-validation-for="DateCreated" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Total" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Total" class="form-control" placeholder="Total">
            <span asp-validation-for="Total" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserId" class="form-control" placeholder="User ID" disabled>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" class="btn btn-primary">Back</a>
        </div>
    </div>

    <input type="hidden" asp-for="BillingAddress" />
    <input type="hidden" asp-for="BillingCity" />
    <input type="hidden" asp-for="BillingZip" />
    <input type="hidden" asp-for="BillingCountry" />
    <input type="hidden" asp-for="BillingEmail" />
    <input type="hidden" asp-for="BillingFirstName" />
    <input type="hidden" asp-for="BillingLastName" />
    <input type="hidden" asp-for="BillingPhone" />
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }