@model UserViewModel
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center m-3">Create user</h1>

<hr />

<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Username" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Username" class="form-control" placeholder="Username">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RepeatedPassword" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RepeatedPassword" class="form-control" placeholder="Repeated password">
            <span asp-validation-for="RepeatedPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Avatar" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Avatar" class="custom-file-input" id="customFile" accept="image/*">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
            <span asp-validation-for="Avatar" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-success">Create</button>
            <a asp-action="Index" class="btn btn-primary">Back</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

