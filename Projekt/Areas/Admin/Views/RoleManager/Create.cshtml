@using Microsoft.AspNetCore.Identity
@model IdentityRole
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center m-3">Create new role</h1>

<hr />

<form method="post" asp-action="Create" asp-controller="RoleManager">
    <div class="form-group row">
        <label for="roleName" class="col-sm-2 col-form-label">Role name</label>
        <div class="col-sm-10">
            <input name="roleName" class="form-control" placeholder="Role name" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            <button class="btn btn-success">Create new role</button>
            <a asp-action="Index" class="btn btn-primary">Back</a>
        </div>
    </div>
</form>

