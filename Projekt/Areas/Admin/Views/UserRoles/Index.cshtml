@model List<UserRolesViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center m-3">Users with roles</h1>

<div class="row justify-content-center">
    <div class="col-sm-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@string.Join(" , ", user.Roles)</td>
                        <td>
                            <a asp-action="AddRolesToUser" class="btn btn-success" asp-route-id="@user.Id">
                                Add/Remove roles
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p class="text-center">
            <a asp-action="Index" asp-controller="User" class="btn btn-primary">Go back to list of users</a>
        </p>
    </div>
</div>

