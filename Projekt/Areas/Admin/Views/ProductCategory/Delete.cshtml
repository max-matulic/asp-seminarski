@model ProductCategory
@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center m-3">Delete product category</h1>

<hr />

<h4>Are you sure you want to delete category @Model.CategoryTitle for product @Model.ProductTitle?</h4>

<form asp-action="DeleteProductCategory" class="mt-3">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-productId="@Model.ProductId" class="btn btn-primary">Back</a>
</form>


